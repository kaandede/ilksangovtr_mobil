<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ilksangovtr_mobil.Views.Loading"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand">
        <Grid>
            <Image Source="back25.png" 
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand" 
               VerticalOptions="FillAndExpand"/>
            <StackLayout Margin="0,0,0,0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <StackLayout Margin="0,0,0,0">
                    <Image WidthRequest="120" HeightRequest="120" Source="iilksan.png" Aspect="AspectFit"/>
                </StackLayout>
                <ActivityIndicator IsRunning="True" Color="#164276"  WidthRequest="20" HeightRequest="20" />
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>