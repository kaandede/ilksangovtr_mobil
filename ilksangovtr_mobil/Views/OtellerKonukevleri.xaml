<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ilksangovtr_mobil.Models"
             xmlns:viewmodels="clr-namespace:ilksangovtr_mobil.ViewModels"
             x:Class="ilksangovtr_mobil.Views.OtellerKonukevleri"
             x:DataType="viewmodels:OtellerKonukevleriViewModel"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F8FAFC">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*" 
   Padding="0,0" 
   BackgroundColor="Transparent">
            <Label Text="Sosyal Tesisler"
        Grid.Column="0"
        FontSize="16"
        FontFamily="NexaHeavy"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20,15">
            <CollectionView ItemsSource="{Binding Tesisler}"
                          SelectionMode="Single"
                          SelectionChanged="OnTesisSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:SosyalTesis">
                        <Border StrokeShape="RoundRectangle 24"
                                BackgroundColor="White"
                                Margin="0,0,0,16"
                                Padding="0">
                            <Border.Shadow>
                                <Shadow Brush="#10000000"
                                       Offset="0,6"
                                       Radius="16"
                                       Opacity="0.08"/>
                            </Border.Shadow>
                            <Grid RowDefinitions="Auto,Auto">
                                <Grid>
                                    <Image Source="{Binding ImageUrl}"
                                           Aspect="AspectFill"
                                           HeightRequest="200">
                                        <Image.Clip>
                                            <RoundRectangleGeometry Rect="0,0,1000,200" 
                                                                   CornerRadius="24,24,0,0"/>
                                        </Image.Clip>
                                    </Image>
                                    <Border BackgroundColor="#0D7561"
                                            StrokeShape="RoundRectangle 12"
                                            Padding="16,8"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start"
                                            Margin="16">
                                        <Label Text="{Binding TesisTipi}"
                                               TextColor="White"
                                               FontFamily="NexaHeavy"
                                               FontSize="13"/>
                                    </Border>
                                </Grid>
                                <Grid Grid.Row="1"
                                      Padding="24,20"
                                      RowDefinitions="Auto,Auto,Auto"
                                      RowSpacing="12">
                                    <Label Text="{Binding Ad}"
                                           FontFamily="NexaHeavy"
                                           TextColor="#152B27"
                                           FontSize="20"/>
                                    <Label Grid.Row="1"
                                           Text="{Binding Konum}"
                                           FontFamily="NexaLight"
                                           TextColor="#64748B"
                                           FontSize="16"/>
                                    <Grid Grid.Row="2" 
                                          ColumnDefinitions="Auto,*" 
                                          ColumnSpacing="16">
                                        <Button Text="DETAYLI BİLGİ"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:OtellerKonukevleriViewModel}}, 
                                                          Path=TesisDetailCommand}"
                                                CommandParameter="{Binding .}"
                                                FontFamily="NexaHeavy"
                                                BackgroundColor="#0D7561"
                                                TextColor="White"
                                                HeightRequest="48"
                                                WidthRequest="160"
                                                CornerRadius="14"/>
                                        <VerticalStackLayout Grid.Column="1"
                                                           HorizontalOptions="End"
                                                           Spacing="4">
                                            <Label Text="{Binding OdaSayisi, StringFormat='{0} Oda'}"
                                                   FontFamily="NexaHeavy"
                                                   TextColor="#152B27"
                                                   FontSize="16"
                                                   HorizontalOptions="End"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 