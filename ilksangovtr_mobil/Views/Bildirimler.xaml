    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <StackLayout>
                <Border BackgroundColor="Transparent"
                         Stroke="Transparent"
                         StrokeShape="RoundRectangle 0,0,30,30" >
                    <Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80" />
                            </Grid.RowDefinitions>
                        </Grid>
                        <Grid Margin="0,0,0,0"
                   Grid.Row="0"
                   ColumnDefinitions="*,Auto,*">
                            <Frame Margin="15,10,0,0"
                          Grid.Column="0"
                    BorderColor="#F3F7F6"
                    CornerRadius="30"
                    BackgroundColor="#F3F7F6"
                    Padding="12"
                    VerticalOptions="StartAndExpand"
                    HorizontalOptions="StartAndExpand">
                                <ImageButton Source="left.png" 
                   HeightRequest="18"
                   WidthRequest="18" 
                   Clicked="back_AnaSayfa_Clicked"
                   VerticalOptions="CenterAndExpand" 
                   Margin="0,0,0,0" 
                   HorizontalOptions="CenterAndExpand"/>
                            </Frame>
                            <Frame BorderColor="Transparent"
                    BackgroundColor="Transparent"
                    Margin="0,-15,0,0"
                    Grid.Column="1"
                    Padding="0"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="StartAndExpand">
                                <Label FontSize="14"
                    FontFamily="NexaHeavy" 
                    Text="Bildirimler ve Mesajlar"
                    TextColor="#00100C"/>
                            </Frame>
                            <Border Grid.Column="2"
                  Padding="12"
                  StrokeShape="RoundRectangle 30"
                  Stroke="#F3F7F6"
                  Margin="0,10,20,0"
                  BackgroundColor="#F3F7F6"
                  HorizontalOptions="EndAndExpand"
                  VerticalOptions="StartAndExpand">
                                <ImageButton Source="search.png" 
                   HeightRequest="18"
                   WidthRequest="18" 
                   VerticalOptions="Center"    
                   Margin="0,0,0,0" 
                   HorizontalOptions="Start"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </StackLayout>

