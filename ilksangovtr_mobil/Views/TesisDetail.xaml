<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ilksangovtr_mobil.Models"
             xmlns:viewmodels="clr-namespace:ilksangovtr_mobil.ViewModels"
             x:Class="ilksangovtr_mobil.Views.TesisDetail"
             x:DataType="viewmodels:TesisDetailViewModel"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F8FAFC">

    <Shell.TitleView>
        <Grid Padding="20,0">
            <Label Text="{Binding Tesis.Ad}"
                   FontFamily="NexaHeavy"
                   FontSize="20"
                   TextColor="#152B27"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Spacing="24" Padding="20,15">
            <Image Source="{Binding Tesis.ImageUrl}"
                   HeightRequest="250"
                   Aspect="AspectFill">
                <Image.Clip>
                    <RoundRectangleGeometry Rect="0,0,1000,250" 
                                          CornerRadius="24"/>
                </Image.Clip>
            </Image>

            <VerticalStackLayout Spacing="16">
                <Label Text="{Binding Tesis.TesisTipi}"
                       FontFamily="NexaHeavy"
                       TextColor="#0D7561"
                       FontSize="16"/>
                
                <Label Text="{Binding Tesis.Aciklama}"
                       FontFamily="NexaLight"
                       TextColor="#64748B"
                       FontSize="16"/>

                <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                    <Label Text="İletişim Bilgileri"
                           FontFamily="NexaHeavy"
                           TextColor="#152B27"
                           FontSize="18"/>
                    
                    <VerticalStackLayout Grid.Row="1" Spacing="8">
                        <Label Text="{Binding Tesis.IletisimTelefon}"
                               FontFamily="NexaLight"
                               TextColor="#64748B"/>
                        <Label Text="{Binding Tesis.IletisimEmail}"
                               FontFamily="NexaLight"
                               TextColor="#64748B"/>
                    </VerticalStackLayout>
                </Grid>

                <Button Text="REZERVASYON YAP"
                        Command="{Binding ReservasyonCommand}"
                        FontFamily="NexaHeavy"
                        BackgroundColor="#0D7561"
                        TextColor="White"
                        HeightRequest="48"
                        CornerRadius="14"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 