<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ilksangovtr_mobil.Views.ChangePasswordPage"
             BackgroundColor="#80000000">

    <Grid VerticalOptions="Center" Padding="20">
        <Border StrokeShape="RoundRectangle 20"
                BackgroundColor="White"
                Padding="20">
            <Border.Shadow>
                <Shadow Brush="#40000000"
                       Offset="0,4"
                       Radius="12"
                       Opacity="0.2"/>
            </Border.Shadow>
            <VerticalStackLayout Spacing="20">
                <Label Text="Şifre Değiştir"
                       FontFamily="NexaHeavy"
                       TextColor="#152B27"
                       FontSize="20"
                       HorizontalOptions="Center"/>

                <!-- Mevcut Şifre -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Mevcut Şifre"
                           FontFamily="NexaLight"
                           TextColor="#677372"/>
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#F8F9FB"
                            Padding="15,0"
                            HeightRequest="50">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="CurrentPasswordEntry"
                                   IsPassword="True"
                                   Placeholder="Mevcut şifrenizi girin"
                                   FontFamily="NexaLight"
                                   PlaceholderColor="#677372"/>
                            <ImageButton Grid.Column="1"
                                       Source="eye_icon.png"
                                       HeightRequest="24"
                                       Clicked="OnShowPasswordClicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Yeni Şifre -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Yeni Şifre"
                           FontFamily="NexaLight"
                           TextColor="#677372"/>
                    <Border StrokeShape="RoundRectangle 12"
                            BackgroundColor="#F8F9FB"
                            Padding="15,0"
                            HeightRequest="50">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="NewPasswordEntry"
                                   IsPassword="True"
                                   Placeholder="Yeni şifrenizi girin"
                                   FontFamily="NexaLight"
                                   PlaceholderColor="#677372"
                                   TextChanged="OnPasswordChanged"/>
                            <ImageButton Grid.Column="1"
                                       Source="eye_icon.png"
                                       HeightRequest="24"
                                       Clicked="OnShowPasswordClicked"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Şifre Gücü -->
                <VerticalStackLayout Spacing="5">
                    <Grid x:Name="StrengthGrid"
                          ColumnDefinitions="*,*,*,*" 
                          ColumnSpacing="5">
                        <Border x:Name="Strength0" Grid.Column="0" HeightRequest="4"/>
                        <Border x:Name="Strength1" Grid.Column="1" HeightRequest="4"/>
                        <Border x:Name="Strength2" Grid.Column="2" HeightRequest="4"/>
                        <Border x:Name="Strength3" Grid.Column="3" HeightRequest="4"/>
                    </Grid>
                    <Label x:Name="StrengthLabel"
                           FontFamily="NexaLight"
                           FontSize="12"/>
                </VerticalStackLayout>

                <!-- Butonlar -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <Button Text="VAZGEÇ"
                            FontFamily="NexaHeavy"
                            BackgroundColor="#F8F9FB"
                            TextColor="#677372"
                            HeightRequest="50"
                            CornerRadius="12"
                            Clicked="OnCancelClicked"/>
                    <Button Grid.Column="1"
                            Text="DEĞİŞTİR"
                            FontFamily="NexaHeavy"
                            BackgroundColor="#0D7561"
                            TextColor="White"
                            HeightRequest="50"
                            CornerRadius="12"
                            Clicked="OnChangePasswordClicked"/>
                </Grid>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
