            <Border Padding="25" WidthRequest="375" Stroke="Transparent" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Grid.Row="3" Margin="10"
                      BackgroundColor="#fff"
                       StrokeShape="RoundRectangle 16">
                <StackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Duyurular"
                    FontSize="18"
                    FontFamily="NexaHeavy"/>
                        <Label Grid.Column="1"
                    Text="Tümü"
                    TextColor="#0D7561"
                    TextDecorations="Underline"
                    FontFamily="NexaLight" 
                    FontAttributes="Bold"/>
                    </Grid>


                    <ListView VerticalScrollBarVisibility="Never"
                         ItemsSource="{Binding DuyuruItems}"
                         RowHeight="45"
                         Margin="0,10,0,0"
                         HasUnevenRows="True"
                         BackgroundColor="Transparent"
                         SeparatorColor="#c2c7c7">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:DuyuruItem">
                                <ViewCell>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>

                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border  
                                     Grid.Column="0"
                                     Grid.Row="0"
                                     Stroke="Transparent" 
                                     BackgroundColor="Transparent" 
                                     StrokeShape="RoundRectangle 30" 
                                     Padding="5"
                                     Margin="0,20,0,0"
                                     VerticalOptions="CenterAndExpand"
                                     HorizontalOptions="CenterAndExpand">
                                            <Image Source="{Binding Duyuru_Image}"
                                         VerticalOptions="CenterAndExpand"
                                         HorizontalOptions="CenterAndExpand"
                                         HeightRequest="20"
                                         WidthRequest="20"/>
                                        </Border>

                                        <Label Grid.Column="1" Grid.Row="0" Padding="5,10,5,5"  VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center" FontFamily="NexaLight" FontAttributes="Bold" TextColor="#011612" Text="{Binding Duyuru_Title}"/>
                                        <Label Grid.Column="1" Grid.Row="1" Padding="5,0,0,5" VerticalTextAlignment="Center" FontFamily="NexaHeavy" FontSize="11" TextColor="#273935" Text="{Binding Duyuru_date}"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

            </Border>
            <Border Padding="25" WidthRequest="375" Stroke="Transparent" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Grid.Row="4" Margin="10"
            BackgroundColor="#fff"
             StrokeShape="RoundRectangle 16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="İşlemler"
                            Grid.Row="0"
                            TextColor="#757577"
                            FontSize="18"
                            FontFamily="NexaLight"
                            FontAttributes="Bold"/>


                    <StackLayout Grid.Row="1" Margin="0,10,0,0" Orientation="Horizontal" HorizontalOptions="Start">
                        <Border  
             Grid.Column="0"
             Stroke="Transparent" 
             BackgroundColor="#fff" 
             StrokeShape="RoundRectangle 30" 
             Padding="12"
             VerticalOptions="Start"
             HorizontalOptions="Start">
                            <Border.Shadow>
                                <Shadow Brush="#687072" Offset="5,5" Radius="40" Opacity="0.2"/>
                            </Border.Shadow>
                            <Image Source="insurance.png"
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand"
                 HeightRequest="20"
                 WidthRequest="20"/>
                        </Border>
                        <Border  Grid.Column="1"
                  Margin="10,0,0,0"
                 Stroke="Transparent" 
                 BackgroundColor="Transparent" 
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="StartAndExpand">
                            <Label Text="İkraz Sigorta Poliçeleri"
                 FontFamily="NexaHeavy"/>
                        </Border>
                    </StackLayout>
                    <StackLayout Grid.Row="2" Margin="0,10,0,10" Orientation="Horizontal" HorizontalOptions="Start">
                        <Border  
           Grid.Column="0"
           Stroke="Transparent" 
           BackgroundColor="#fff" 
           StrokeShape="RoundRectangle 30" 
           Padding="12"
           VerticalOptions="Start"
           HorizontalOptions="Start">
                            <Border.Shadow>
                                <Shadow Brush="#687072" Offset="5,5" Radius="40" Opacity="0.2"/>
                            </Border.Shadow>
                            <Image Source="tag_right.png"
               HeightRequest="20"
               WidthRequest="20"/>
                        </Border>
                        <Border  Grid.Column="1"
                Margin="10,0,0,0"
               Stroke="Transparent" 
               BackgroundColor="Transparent" 
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="StartAndExpand">
                            <Label Text="Kampanyalar"
               FontFamily="NexaHeavy"/>
                        </Border>
                    </StackLayout>
                    <StackLayout Grid.Row="3" Margin="0,0,0,10" Orientation="Horizontal" HorizontalOptions="Start">
                        <Border  
         Grid.Column="0"
         Stroke="Transparent" 
         BackgroundColor="#fff" 
         StrokeShape="RoundRectangle 30" 
         Padding="12"
         VerticalOptions="Start"
         HorizontalOptions="Start">
                            <Border.Shadow>
                                <Shadow Brush="#687072" Offset="5,5" Radius="40" Opacity="0.2"/>
                            </Border.Shadow>
                            <Image Source="bed.png"
         HeightRequest="20"
         WidthRequest="20"/>
                        </Border>
                        <Border  Grid.Column="1"
          Margin="10,0,0,0"
         Stroke="Transparent" 
         BackgroundColor="Transparent" 
         VerticalOptions="CenterAndExpand"
         HorizontalOptions="StartAndExpand">
                            <Label Text="Oteller ve Konukevleri"
         FontFamily="NexaHeavy"/>
                        </Border>
                    </StackLayout>
                    <StackLayout Grid.Row="4" Margin="0,0,0,10" Orientation="Horizontal" HorizontalOptions="Start">
                        <Border  
              Grid.Column="0"
              Stroke="Transparent" 
              BackgroundColor="#fff" 
              StrokeShape="RoundRectangle 30" 
              Padding="12"
              VerticalOptions="Start"
              HorizontalOptions="Start">
                            <Border.Shadow>
                                <Shadow Brush="#687072" Offset="5,5" Radius="40" Opacity="0.2"/>
                            </Border.Shadow>
                            <Image Source="folder.png"
              HeightRequest="20"
              WidthRequest="20"/>
                        </Border>
                        <Border  Grid.Column="1"
               Margin="10,0,0,0"
              Stroke="Transparent" 
              BackgroundColor="Transparent" 
              VerticalOptions="CenterAndExpand"
              HorizontalOptions="StartAndExpand">
                            <Label Text="Bülten ve Raporlar"
              FontFamily="NexaHeavy"/>
                        </Border>
                    </StackLayout>
                </Grid>

            </Border>




        </StackLayout>
    </ScrollView>
</ContentPage>


