<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ilksangovtr_mobil.Views.AnaSayfa"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:ilksangovtr_mobil.Models"
             x:DataType="models:AnaSayfaViewModel" 
             BackgroundColor="#F3F7F6"
             Shell.NavBarIsVisible="True">


    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" 
               Padding="0,0" 
               BackgroundColor="Transparent">
            <Label Text="Merhaba, Kaan DEDE"
            Grid.Column="0"
            FontFamily="NexaHeavy"
           VerticalOptions="CenterAndExpand"/>

            <ImageButton Grid.Column="2"
              Source="notification_bell"
              HeightRequest="30"
              WidthRequest="30"
              Margin="0,0,20,0"
              Clicked="Bildirimler_Clicked"/>
        </Grid>
    </Shell.TitleView>
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem x:Name="kullaniciAdi" />
        <ToolbarItem IconImageSource="bell_24_title" Order="Primary" Priority="2"/>
    </ContentPage.ToolbarItems>-->

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#F3F7F6" StatusBarStyle="DarkContent"/>
    </Page.Behaviors>

    <ScrollView VerticalScrollBarVisibility="Never">

        <StackLayout>

            <Border BackgroundColor="#F3F7F6"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 0,0,30,30" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                     Margin="25"
                     BackgroundColor="Transparent">
                        <StackLayout Spacing="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Toplam Ödenen Aidat Tutarı"
                  Grid.Column="0"
                   Grid.Row="0"
                 FontSize="14"
                 Margin="-10,0,0,0"
                 FontFamily="NexaLight"
                 FontAttributes="Bold"
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand"
                 TextColor="#666"/>
                                <Label Text="22.259,69 ₺"
                  Grid.Column="0"
                  Grid.Row="1"
                  FontSize="32"
                  Margin="0,10,0,0"
                  FontFamily="NexaHeavy"/>
                                <Image Source="earnings_red.png"
                  Grid.Column="2"
                  Grid.Row="1"
                  Margin="0,-10,-5,0"
                  HeightRequest="54"
                  VerticalOptions="Start"
                  HorizontalOptions="End"
                  WidthRequest="54"/>
                            </Grid>
                            <Border BackgroundColor="Transparent" Margin="-5,-5,0,0" HorizontalOptions="Start" Stroke="Transparent" StrokeShape="RoundRectangle 30">
                                <Label Text="Son Aidat Bilgisi : 1.733,04 ₺"
                    FontFamily="NexaHeavy"
                    Padding="10,10,10,10"
                    BackgroundColor="#EAEEF6"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    TextColor="#838FF0"
                    FontSize="12"/>
                            </Border>

                        </StackLayout>
                    </Grid>
                    <Grid Grid.Row="1"
                           Margin="0,5,0,0"
                           HeightRequest="70"
                           VerticalOptions="EndAndExpand">
                        <Border BackgroundColor="Transparent"
                         Stroke="Transparent"
                         StrokeShape="RoundRectangle 0,0,30,30"
                         StrokeThickness="1">
                            <Border.Shadow>
                                <Shadow Brush="#0D7561" 
                           Offset="10,10" 
                           Radius="40" 
                           Opacity="0.2"/>
                            </Border.Shadow>
                            <Grid Margin="10,0,10,0" 
                                 ColumnDefinitions="*,*,*"
                                 RowDefinitions="*,*"
                                 RowSpacing="3">
                                <Label Grid.Row="1"
                                      FontFamily="NexaLight"
                                      FontAttributes="Bold"
                                      FontSize="12"
                                      HorizontalOptions="Center"
                                      Text="Sosyal Yardımlar"
                                      TextColor="#011612">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Click_SosyalYardimlar" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Label Grid.Row="1"
                                   Grid.Column="1"
                                   FontFamily="NexaLight"
                                   FontAttributes="Bold"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   Text="Araç Kampanya"
                                   TextColor="#011612">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Click_AracKampanya" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Label Grid.Row="1"
                           Grid.Column="2"
                           FontFamily="NexaLight"
                           FontAttributes="Bold"
                           FontSize="12"
                           HorizontalOptions="Center"
                           Text="İkraz Hesaplama"
                           TextColor="#011612"/>
                                <ImageButton Source="social_care.png" 
                          HeightRequest="28"
                          WidthRequest="28" 
                          Clicked="Click_SosyalYardimlar"
                          VerticalOptions="Center" 
                          Margin="0,0,0,0" 
                          HorizontalOptions="Center"/>
                                <ImageButton Source="car.png" 
                                Grid.Column="1"
                                HeightRequest="28"
                                Clicked="Click_AracKampanya"
                                WidthRequest="28" 
                                VerticalOptions="Center" 
                                Margin="0,0,0,0" 
                                HorizontalOptions="Center"/>
                                <Image Source="calculate.png" 
                            Grid.Column="2"
                            HeightRequest="28"
                            WidthRequest="28" 
                            VerticalOptions="Center" 
                            Margin="0,0,0,0" 
                            HorizontalOptions="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

