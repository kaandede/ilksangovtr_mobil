<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ilksangovtr_mobil.Views.SifirAracKampanyaBasvur"
             xmlns:viewmodels="clr-namespace:ilksangovtr_mobil.ViewModels"
             x:DataType="viewmodels:SifirAracKampanyaBasvurViewModel"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F3F7F6">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*" 
              Padding="0,0" 
              BackgroundColor="Transparent">
            <Label Text="Araç Kampanyası Başvuru"
                   Grid.Column="0"
                   FontSize="16"
                   FontFamily="NexaHeavy"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Frame BackgroundColor="White"
                   Padding="15"
                   CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding Kampanya.ARACKAMP_ADI}"
                           FontFamily="NexaHeavy"
                           TextColor="#152B27"
                           FontSize="18"/>
                    
                    <Label Text="{Binding Kampanya.ARAC_OZELLIKLERI}"
                           FontFamily="NexaLight"
                           TextColor="#64748B"
                           FontSize="14"/>
                    
                    <Label Text="{Binding Kampanya.ARAC_FIYATI, StringFormat='{0} TL'}"
                           FontFamily="NexaHeavy"
                           TextColor="#0D7561"
                           FontSize="16"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Başvuruyu Tamamla"
                    Command="{Binding BasvuruyuTamamlaCommand}"
                    BackgroundColor="#0D7561"
                    TextColor="White"
                    FontFamily="NexaHeavy"
                    HeightRequest="48"
                    CornerRadius="14"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 